# Core Configuration
MAILCOW_HOSTNAME=mail.delhomme.ovh
TZ=Europe/Paris
COMPOSE_PROJECT_NAME=mailcow-dockerized

# Database Configuration
DBNAME=mailcow
DBUSER=mailcow
DBPASS=YourSecureDBPassword2024!
DBROOT=YourSecureRootPassword2024!

# Network Configuration  
IPV4_NETWORK=172.22.1
IPV6_NETWORK=fd4d:6169:6c63:6f77::/64
REAL_IP_FROM=172.18.0.0/16

# HTTP/HTTPS Configuration for Reverse Proxy
HTTP_PORT=8080
HTTPS_PORT=8443
HTTP_BIND=127.0.0.1
HTTPS_BIND=127.0.0.1
SKIP_LETS_ENCRYPT=y
ADDITIONAL_SERVER_NAMES=webmail.delhomme.ovh,autodiscover.delhomme.ovh,autoconfig.delhomme.ovh

# Mail Ports
SMTP_PORT=25
SMTPS_PORT=465
SUBMISSION_PORT=587
IMAP_PORT=143
IMAPS_PORT=993
POP_PORT=110
POPS_PORT=995
SIEVE_PORT=4190

# API Configuration
API_KEY=YourSecureAPIKey2024!
API_KEY_READ_ONLY=YourReadOnlyAPIKey2024!
API_ALLOW_FROM=172.22.1.0/24,127.0.0.1

# Performance Settings
SKIP_CLAMD=n
SKIP_SOLR=y
SKIP_SOGO=n
LOG_LINES=9999
MAILCOW_PASS_SCHEME=BLF-CRYPT
ALLOW_ADMIN_EMAIL_LOGIN=n